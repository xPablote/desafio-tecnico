<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Formato de log profesional -->
    <property name="LOG_PATTERN" value="[%date] %-5level %logger{36} - %msg%n"/>
    <property name="LOG_DIR" value="./logs"/>
    <property name="LOG_FILE" value="${LOG_DIR}/crud-persona.log"/>

    <!-- Appender para consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Appender para archivo con rotación diaria -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rotación diaria, manteniendo 7 días de historial -->
            <fileNamePattern>${LOG_DIR}/crud-persona.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Configuración del root logger -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>